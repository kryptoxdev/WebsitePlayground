<!DOCTYPE html>
<html>

<head>
	<title>
		<%= title %>
	</title>
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
	<div class="container">
		<form id="dataInput" action="/formReturn" method="post">
			<div class="row my-3 darkerBG rounded">
				<div class="col-md-4 my-3">
					<label class="col-form-label" for="imei">IMEI</label>
				</div>
				<div class="col-md-4 my-3">
					<input type="text" class="form-control" name="imei" id="imei" value="351091217585771" required>
				</div>
			</div>

			<h5 class="mb-3">Device Details</h5>
			<div class="row mb-3 darkerBG rounded">
				<div class="row">
					<div class="col-md-4 my-3">
						<label class="col-form-label" for="modelSelect">Model</label>
					</div>
					<div class="col-md-4 my-3">
						<select class="form-select" name="model" id="modelSelect" required>
							<option disabled selected value>Please select a model..</option>
							<% for(let model of modelArray) { %>
								<option value="<%= model %>">
									<%= model%>
								</option>
								<% } %>
						</select>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4 my-3">
						<label class="col-form-label" for="carrierSelect">Carrier</label>
					</div>
					<div class="col-md-4 my-3">
						<select class="form-select" name="carrier" id="carrierSelect" required>
							<option disabled selected value>Please select a carrier..</option>
							<% for(let carrier of carriers) { %>
								<option value="<%= carrier %>">
									<%= carrier %>
								</option>
								<% } %>
						</select>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
						<label class="col-form-label" for="colourSelect">Colour</label>
						<div class="form-text mb-3">
							<p>(product)red</p>
						</div>
					</div>
					<div class="col-md-4 my-3">
						<select class="form-select" name="colour" id="colourSelect" required>
							<option disabled selected value>Choose...</option>
							<option value="Black">Black</option>
							<option value="White">White</option>
							<option value="Yellow">Yellow</option>
							<option value="Green">Green</option>
							<option value="Purple">Purple</option>
							<option value="Red">Red</option>
						</select>
					</div>
				</div>
			</div>

			<h5 class="mb-3">Condition</h5>
			<div class="row mb-3 pt-3 darkerBG rounded">
				<% for (let condition of conditionGroups) { %>
					<div class="row" id="<%= condition.id %>">
						<div class="col-md-4">
							<label class="col-form-label" for="<%= condition.id %>">
								<%= condition.label %>
							</label>
						</div>
						<div class="col-md-4 mb-3">
							<div class="btn-group d-flex" role="group"">
								<input type="radio" class="btn-check" name="<%= condition.conditionName %>"
									id="btn<%= condition.id %>None" autocomplete="off" value="None">
								<label class="btn btn-light" for="btn<%= condition.id %>None">None</label>
								
								<input type="radio" class="btn-check" name="<%= condition.conditionName %>"
									id="btn<%= condition.id %>Light" autocomplete="off" value="Light">
								<label class="btn btn-success" for="btn<%= condition.id %>Light">Light</label>
								
								<input type="radio" class="btn-check" name="<%= condition.conditionName %>"
									id="btn<%= condition.id %>Moderate" autocomplete="off" value="Moderate">
								<label class="btn btn-warning" for="btn<%= condition.id %>Moderate">Moderate</label>

								<input type="radio" class="btn-check" name="<%= condition.conditionName %>"
									id="btn<%= condition.id %>Heavy" autocomplete="off" value="Heavy">
								<label class="btn btn-danger" for="btn<%= condition.id %>Heavy">Heavy</label>
							</div>
						</div>
					</div>
					<% } %>
			</div>
			<button type="submit" value="process" class="btn btn-primary">Process</button>
		</form>
	</div>
</body>

</html>